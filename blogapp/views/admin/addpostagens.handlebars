{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" placeholder="Título da postagem">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" placeholder="Slug da postagem">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" placeholder="Descrição da postagem">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" placeholder="Conteúdo da postagem"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" >
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
        </form>
    </div>
</div>