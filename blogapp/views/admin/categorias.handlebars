<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{data}}</small><br>
            <div style="display: flex; flex-direction:row;">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar categoria</button></a>
                <form action="/admin/categorias/delete" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-3">Deletar Categoria</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <hr>
    <h3 class="mt-4">Nenhuma categoria cadastrada</h3>
{{/each}}