<h1>{{categoria.nome}}</h1>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-info">Leia mais</button></a>
            <hr>
            <small>Data de publicação: {{data}}</small>
        </div>
    </div>
{{else}}
    <hr>
    <h6 class="mt-4">Não há postagens cadastradas</h6>
{{/each}}
